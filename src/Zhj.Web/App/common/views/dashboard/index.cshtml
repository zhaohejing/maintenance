<div ng-controller="common.views.dashboard.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>工作台</span>
                    </h1>
                </div>
            </div>
        </div>

    </div>
    <div class="portlet light">
            <div class="row">
                <div class="col-lg-3">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <span class="label label-sm label-success"> 快速报修 </span>
                            
                        </h5>
                    </div>
                    <div class="modal-body">
                        <form name="exampleForm" role="form" novalidate class="form-validation">
                            <div class="row">
                               
                                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.mac.deviceLocation}"
                                               ng-model="vm.mac.deviceLocation" required maxlength="100">
                                        <label>设备负责人</label>
                                    </div>
                              
                            
                            </div>
                            <div class="row">
                                <div class="form-group form-md-line-input form-md-floating-label no-hint">
                                    <input class="form-control" type="text" name="title" ng-class="{'edited':vm.mac.deviceLocation}"
                                           ng-model="vm.mac.deviceLocation" required maxlength="100">
                                    <label>设备名称</label>
                                </div>
                            </div>
                            <div class="row">
                                    <div class="form-group form-md-line-input form-md-floating-label">
                                        <textarea ng-model="vm.mac.faultDescription" maxlength="500" rows="5" type="text"
                                                  ng-class="{'edited':vm.mac.faultDescription}" required
                                                  name="description" class="form-control position-popup-textarea"></textarea>
                                        <label>故障描述</label>
                                    </div>
                            </div>
                          
                          
                          
                            <div class="modal-footer">
                                <button type="submit" button-busy="vm.saving" busy-text="保存中" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="exampleForm.$invalid"><i class="fa fa-save"></i> <span>报修</span></button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <span class="label label-sm label-danger"> 逾期请求 </span>

                                
                            </h5>
                        </div>
                        <div class="modal-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td>编号</td>
                                        <td>设备名称</td>
                                        <td>设备资产号</td>
                                        <td>设备责任人</td>
                                        <td>设备位置</td>
                                    </tr>
                                </thead>
                              <tbody>
                                  <tr ng-repeat="row in vm.last">
                                      <td>{{$index+1}}</td>
                                      <td>{{row.deviceName}}</td>
                                      <td>{{row.deviceAssetNo}}</td>
                                      <td>{{row.deviceHead}}</td>
                                      <td>{{row.deviceLocation}}</td>

                                  </tr>
                              </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <span class="label label-sm label-warning"> 今天必须处理请求 </span>
                                
                            </h5>
                        </div>
                        <div class="modal-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <td>编号</td>
                                        <td>设备名称</td>
                                        <td>设备资产号</td>
                                        <td>设备责任人</td>
                                        <td>设备位置</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="row in vm.mast">
                                        <td>{{$index+1}}</td>
                                        <td>{{row.deviceName}}</td>
                                        <td>{{row.deviceAssetNo}}</td>
                                        <td>{{row.deviceHead}}</td>
                                        <td>{{row.deviceLocation}}</td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <span class="label label-sm label-info"> 未解决请求 </span>

                        
                    </h5>
                </div>
                <div class="modal-body">
                    <!-- 角色列表 -->
                    <table object-table
                           data="vm.jTableInfo.data"
                           check-model="vm.jTableInfo.checkModel"
                           back-model="vm.jTableInfo.backModel"
                           display="vm.jTableInfo.pageConfig.itemsPerPage"
                           headers="设备名称,设备资产号,设备别名,设备厂商,设备负责人,设备标识,设备位置"
                           fields="deviceName,deviceAssetNo,deviceAlias,deviceManufacture,deviceHead,deviceSIgnkey,deviceLocation">
                        <tbody>
                            <tr ng-click="$owner.vm.showeditinfo(item)">
                                <td>
                                    <input type="checkbox"
                                           ng-model="::item.checked"
                                           ng-click="$event.stopPropagation();checkOne(item);" />
                                </td>
                                <td show-td item="item" name="deviceName"></td>
                                <td show-td item="item" name="deviceAssetNo"></td>
                                <td show-td item="item" name="deviceAlias"></td>
                                <td show-td item="item" name="deviceManufacture"></td>
                                <td show-td item="item" name="deviceHead"></td>
                                <td show-td item="item" name="deviceSIgnkey"></td>
                                <td show-td item="item" name="deviceLocation"></td>
                            </tr>
                        </tbody>
                    </table>
                    <!--分页-->
                    <nav class="paging">
                        <obj-pagination conf="vm.jTableInfo.pageConfig"></obj-pagination>
                    </nav>
                </div>
            </div>
    </div>
</div>