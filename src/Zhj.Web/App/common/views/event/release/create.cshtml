<div ng-controller="common.views.event.release.create as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>故障报修</span>
                    </h1>
                </div>
            </div>
        </div>

    </div>

    <div class="portlet light org-light">
        <form name="exampleForm" role="form" novalidate class="form-validation">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceName}"
                               ng-model="vm.main.deviceName" required maxlength="100">
                        <label>设备名</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceAssetNo}"
                               ng-model="vm.main.deviceAssetNo" required >
                        <label>设备资产号</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceType}"
                               ng-model="vm.main.deviceType" required maxlength="100">
                        <label>设备类型</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceHead}"
                               ng-model="vm.main.deviceHead" required maxlength="100">
                        <label>设备责任人</label>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceAlias}"
                               ng-model="vm.main.deviceAlias" >
                        <label>设备别名</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceSIgnkey}"
                               ng-model="vm.main.deviceSIgnkey" required maxlength="100">
                        <label>设备标识</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceManufacture}"
                               ng-model="vm.main.deviceManufacture" required maxlength="100">
                        <label>设备厂商</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <input class="form-control" type="text" name="title" ng-class="{'edited':vm.main.deviceLocation}"
                               ng-model="vm.main.deviceLocation" required maxlength="100">
                        <label>设备位置</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <p class="input-group">
                        <input type="text" class="form-control" placeholder="最初修复时间"
                               uib-datepicker-popup readonly
                               ng-model="vm.main.lastRepairTime"
                               is-open="vm.date.leftopen"
                               datepicker-options="vm.date.dateOptions"
                               ng-required="true"
                               current-text="今天"
                               clear-text="清除"
                               close-text="关闭" />
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default"
                                    ng-click="vm.date.openleft()">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </button>
                        </span>
                    </p>

                </div>
                <div class="col-md-4">
                        <a href="#" ng-click="vm.upload()">选择图片上传</a>
                    <div ng-if="vm.imagecount>0" class="row">
                        <div ng-repeat="v in vm.main.profileList" class="col-md-{{vm.imagecount}}">
                            <img src="@Url.Action("GetProfilePictureById","Profile")?id={{v}}" style="width:60px;height:60px;"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <textarea ng-model="vm.main.deviceDescription" maxlength="500" rows="5" type="text"
                                  ng-class="{'edited':vm.main.deviceDescription}" 
                                  name="description" class="form-control position-popup-textarea"></textarea>
                        <label>设备描述</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        <textarea ng-model="vm.main.faultDescription" maxlength="500" rows="5" type="text"
                                  ng-class="{'edited':vm.main.faultDescription}" required
                                  name="description" class="form-control position-popup-textarea"></textarea>
                        <label>故障描述</label>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">关闭</button>
                <button type="submit" button-busy="vm.saving" busy-text="保存中"
                        class="btn btn-primary blue" ng-click="vm.save()"
                        ng-disabled="exampleForm.$invalid">
                    <i class="fa fa-save"></i> <span>保存</span>
                </button>
            </div>
        </form>
    </div>

</div>